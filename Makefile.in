CC=@CC@

CFLAGS=-DF_CONF=\"$(F_CONF)\" @CFLAGS@ @CPPFLAGS@

LIBS=@LIBS@

prefix=@prefix@
exec_prefix=@exec_prefix@

# Configuration file default; if none, look at config.c for default!
F_CONF=@sysconfdir@/pound.cfg

OBJS=pound.o http.o config.o svc.o

all:	pound pound.8

pound:	$(OBJS)
		$(CC) @LDFLAGS@ -o pound $(OBJS) $(LIBS)

$(OBJS):	pound.h

install:	all
		@INSTALL@ -o bin -g bin -m 555 -s pound @sbindir@
		@INSTALL@ -o bin -g bin -m 644 pound.8 @mandir@/man8

clean:
		rm -f pound $(OBJS)

uninstall:
		-rm -f @sbindir@/pound @mandir@/man8/pound.8 @mandir@/cat8/pound.8
